@{
}

@model List<CovidPortal.web.Models.Entities.Patient>

<h1>All Patients</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Full Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FullName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Patients" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Patients" asp-action="Vaccinations" asp-route-id="@user.Id">Vaccination Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
